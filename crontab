# Run the Python script to trigger search every hour at 30 minutes past the hour
30 * * * * TASK=search python /app/app.py >> /var/log/cron.log 2>&1

# Run the Python script to clear the blocklist every Wednesday at 3 AM
0 3 * * 3 TASK=clear_blocklist python /app/app.py >> /var/log/cron.log 2>&1
